# ============================================================================
# Application Configuration
# ============================================================================

# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3000

# Logging level (fatal, error, warn, info, debug, trace)
LOG_LEVEL=info

# ============================================================================
# Timezone and Target Time Configuration
# ============================================================================

# Default timezone
DEFAULT_TIMEZONE=UTC

# Target hour (in 24-hour format)
TARGET_HOUR=8

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/employee_anniversary?schema=public

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (optional, leave empty if not required)
REDIS_PASSWORD=

# Redis database number (0-15)
REDIS_DB=0

# ============================================================================
# Message Delivery Configuration
# ============================================================================

# Webhook URL for sending anniversary messages
# Example: https://webhook.site/your-unique-id or https://requestbin.com/your-bin
WEBHOOK_URL=https://webhook.site/unique-id

# Webhook request timeout in milliseconds
WEBHOOK_TIMEOUT_MS=5000

# Maximum number of retries for webhook delivery
WEBHOOK_MAX_RETRIES=3

# ============================================================================
# Job Queue Configuration
# ============================================================================

# Number of concurrent jobs to process
JOB_CONCURRENCY=5

# Maximum number of attempts for failed jobs
JOB_ATTEMPTS=3

# Backoff delay between retry attempts in milliseconds
JOB_BACKOFF_DELAY_MS=5000

# ============================================================================
# Scheduler Configuration
# ============================================================================

# Enable/disable the daily scheduler job (true/false)
SCHEDULER_ENABLED=true

# Enable/disable the recovery job for missed messages (true/false)
RECOVERY_JOB_ENABLED=true

# Number of hours to look back for missed messages during recovery
RECOVERY_LOOKBACK_HOURS=48

# ============================================================================
# Security Configuration
# ============================================================================

# Rate limiting window in milliseconds (default: 15 minutes)
API_RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per window per IP
API_RATE_LIMIT_MAX_REQUESTS=100

